require "shellfish/ui";

Box {
    id: header

    container first: firstBox
    container second: secondBox

    property title: ""
    property subtitle: ""

    property active: true

    position: "global"
    y: active ? 0 : -height
    yTransition: NumberAnimation { duration: 700; easing: "InOutQuad" }

    width: documentRoot.windowWidth
    height: theme.itemHeightLarge

    color: theme.primaryBackgroundColorTranslucent
    style: "sh-dropshadow"



    Box {
        id: firstBox
        
        position: "free"
        height: header.height

        layout: "center-row"
    }

    Box {
        property margin: Math.max(firstBox.bbox.width, secondBox.bbox.width)

        fillWidth: true
        height: header.height
        marginLeft: margin
        marginRight: margin

        layout: "center-column"

        Label {
            text: header.title
            bold: true
        }

        Label {
            fontSize: theme.fontSizeSmall
            text: header.subtitle
        }
    }

    Box {
        id: secondBox

        position: "free"
        origin: "top-right"
        height: header.height

        layout: "center-row"
    }
}