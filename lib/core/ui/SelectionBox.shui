require "shellfish/ui";

Button {
    id: box

    property options: []
    property selection: []

    minWidth: theme.itemWidthLarge

    secondaryIcon: "menu"
    text: options[selection[0] || 0] || "?"

    property _menu: null

    property _menuT: template Menu {

        visible: false

        onVisibleChanged: () =>
        {
            if (! visible)
            {
                box.focus = true;
            }
        }

        property item: template MenuItem { }
    }

    onOptionsChanged: () =>
    {
        if (! _menu)
        {
            _menu = _menuT.create();
            _menu.init();
        }

        //console.log("options " + JSON.stringify(options));
        let cs = _menu.children();
        for (let i = 0; i < cs.length; ++i)
        {
            cs[i].discard();
        }

        let items = [];
        for (let i = 0; i < options.length; ++i)
        {
            const option = options[i];
            const menuItem = _menu.item.create();
            menuItem.text = option;
            menuItem.onClick = function ()
            {
                box.selection = [i];
                console.log("selected " + i);
            };
            menuItem.init();
            _menu.add(menuItem);
        }

        if (selection.length === 0)
        {
            selection = [0];
        }
    }

    onClick: () =>
    {
        if (_menu)
        {
            _menu.visible = true;
            _menu.popup(self);
        }
    }

    onWheel: (ev) =>
    {
        ev.accepted = true;

        if (ev.deltaY < 0 && selection[0] > 0)
        {
            selection = [selection[0] - 1];
        }
        else if (ev.deltaY > 0 && selection[0] < options.length - 1)
        {
            selection = [selection[0] + 1];
        }
    } 

}